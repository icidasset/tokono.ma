isLineEnding c =
    c == '\n' || c == '\r'


isSpace c =
    c == ' '


isNotSpace c =
    c /= ' '


notMoreThanXSpaces n =
    succeed identity
        |= getChompedString (chompWhile isSpace)
        |> andThen
                (\spaces ->
                    if String.length spaces > n then
                        problem ("Encountered more than " ++ String.fromInt n ++ " spaces")
                    else
                        succeed spaces
                )



