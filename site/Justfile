set dotenv-load


build:
  rm -rf dist
  mkdir -p dist
  cp -R src/static/ ./dist/
  tea npx tailwindcss -- --input=./src/css/main.css --output=./dist/stylesheet.css --minify

publish: build
  #!/usr/bin/env bash
  cid=$(tea npx w3 -- up ./dist/ | tail -n 1 | sed "s/‚ÅÇ https:\/\/w3s.link\/ipfs\///")
  # https://dns-lexicon.readthedocs.io/
  echo "Publishing $cid"
  lexicon dnsimple --auth-token $DNS_AUTH_TOKEN --content $cid update _dnslink.tokono.ma TXT
