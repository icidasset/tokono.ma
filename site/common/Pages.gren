module Pages exposing (..)

import Views.Common exposing ( Route )



-- 🌳


type alias Page =
    { id : PageId
    , name : String
    , title : String
    , route : Route
    }


type PageId
    = ErrNotFound
    | About
    | Essay
        { baseName : String
        }
    | Essays
    | Index
    | Links
    | Note
        { baseName : String
        }
    | Notes
    | Work


type alias TableOfContents =
    Array
        { archived : Bool
        , page : Page
        }



-- 🏔️


pages : Array Page
pages =
    [ work
    , links
    , essays
    , notes
    , about
    ]


allPages : Array Page
allPages =
    pages
        |> Array.pushFirst index
        |> Array.pushFirst notFound



