module Layouts.Default exposing ( layout )

import Common.Html as Html
import Common.Html.Attributes as A exposing ( class )
import Pages
import Views.Common as Common


layout page attributes contents =
    [ Html.section
        [ class "flex px-8 py-12"
        ]
        [ -- -------------------------------------
          -- HEADER
          -- -------------------------------------
          Html.header
            [ class "flex-none ml-12 mr-36"
            ]
            [ Html.div
                [ class "flex flex-col items-end"
                ]
                [ Html.a
                    [ A.class "block mb-8 w-[98px]"
                    , A.href
                        (Common.pathFromRoot
                            { root = page.route
                            }
                            Pages.index.route
                        )
                    ]
                    [ Common.ikebana
                    ]
                , Common.tokonoma
                ]

            , -- ----
              -- NAV
              -- ----
              let
                link linkPage =
                    let
                        isActive =
                            page.id == linkPage.id
                    in
                    Html.div
                        [ class "mb-4"
                        ]
                        [ Html.a
                            [ A.class "inline-block lh-crop relative"
                            , A.href
                                (Common.pathFromRoot
                                    { root = page.route
                                    }
                                    linkPage.route
                                )
                            ]
                            [ Html.text linkPage.name
                            , if isActive then
                                Html.span
                                    [ class ("mark bg-accent-" ++ String.join "-" page.route)
                                    ]
                                    []
                              else
                                Html.text ""
                            ]
                        ]
              in
              Html.nav
                [ class "font-serif font-light mt-12 text-2xl text-right"
                ]
                (Array.map link Pages.pages)
            ]

        , -- -------------------------------------
          -- MAIN
          -- -------------------------------------
          Html.main_
            (Array.prefix
                [ class "flex-1 max-w-2xl"
                ]
                attributes
            )
            contents
        ]
    ]
