type alias Page msg =
    { title : String
    , route : Route
    , html : Array (Html msg)
    }


type alias Route =
    Array String



-- üõ†Ô∏è


pathFromRoot :
    { root : Route
    }
    -> Route
    -> String
pathFromRoot { root } route =
    root
        |> Array.map (\_ -> "..")
        |> Array.postfix route
        |> String.join "/"


