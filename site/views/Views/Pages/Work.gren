-- 🖼️


linksTable links =
    links
        |> Array.map
                (\link ->
                    [ Html.p
                        [ class "mb-1 truncate"
                        ]
                        [ Html.span
                            [ class "inline-block text-base w-32"
                            ]
                            [ Html.text link.name
                            , Html.text ":"
                            ]
                        , Html.a
                            [ A.href link.url
                            ]
                            [ Html.text link.text
                            ]
                        ]
                    ]
                )
        |> Array.flatten
        |> Html.div []


item id title links nodes =
    nodes
        |> Array.prefix
                [ Html.h2
                    []
                    [ Html.text title
                    ]
                ]
        |> Array.postfix
                [ linksTable links
                ]
        |> Html.div
                [ A.id id
                ]



